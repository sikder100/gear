<%- include('layout/header') %> 

<div class="container mt-4">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h2 class="fw-bold text-dark">Rent Gear Near You</h2>
            <p class="text-muted">Find high-quality equipment in your neighborhood.</p>
        </div>
        <div class="col-md-6">
            <form action="/" method="GET" class="d-flex shadow-sm p-1 bg-white rounded">
                <input type="text" name="q" class="form-control border-0" placeholder="Search for gear...">
                <button class="btn btn-primary px-4">Search</button>
            </form>
        </div>
    </div>

    <div class="row">
        <% if (gear && gear.length > 0) { %>
            <% gear.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <img src="/<%= item.image %>" class="card-img-top" style="height: 220px; object-fit: cover;" alt="<%= item.itemName %>">
                        
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title fw-bold m-0"><%= item.itemName %></h5>
                                <span class="badge <%= item.status === 'Available' ? 'bg-success' : 'bg-warning text-dark' %>">
                                    <%= item.status %>
                                </span>
                            </div>
                            
                            <p class="text-primary fw-bold fs-5 mb-3">$<%= item.pricePerDay %> <small class="text-muted">/day</small></p>
                            
                            <div class="mt-auto pt-3 border-top">
                                <div class="d-grid gap-2">
                                    
                                    <form action="/update-status/<%= item._id %>" method="POST">
                                        <% if (user) { %>
                                            <button type="submit" class="btn btn-sm w-100 <%= item.status === 'Available' ? 'btn-outline-primary' : 'btn-outline-secondary' %>">
                                                <i class="fas <%= item.status === 'Available' ? 'fa-key' : 'fa-undo' %> me-1"></i>
                                                <%= item.status === 'Available' ? 'Rent This Gear' : 'Return Gear' %>
                                            </button>
                                        <% } else { %>
                                            <button type="submit" class="btn btn-sm btn-outline-dark w-100">
                                                <i class="fas fa-sign-in-alt me-1"></i> Login to Rent
                                            </button>
                                        <% } %>
                                    </form>

                                    <% if (user && user.role === 'admin') { %>
                                        <a href="/delete/<%= item._id %>" 
                                           class="btn btn-sm btn-danger w-100" 
                                           onclick="return confirm('Permanently delete this listing?')">
                                            <i class="fas fa-trash-alt me-1"></i> Delete Listing
                                        </a>
                                    <% } %>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <h3 class="text-muted">No gear found.</h3>
                <p><a href="/" class="text-primary">View all items</a></p>
            </div>
        <% } %>
    </div>
</div>

<%- include('layout/footer') %>